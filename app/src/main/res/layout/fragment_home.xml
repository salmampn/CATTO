<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Move checkoutStatus to the top right corner -->
    <TextView
        android:id="@+id/checkoutStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/checked_out"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingTop="16dp"
        android:layout_marginTop="16dp" />

    <!-- Centering currentDate below checkoutStatus -->
    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:layout_below="@id/checkoutStatus"
        android:layout_centerHorizontal="true"
        android:paddingTop="32dp"/>

    <!-- Centering currentTime below currentDate -->
    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:layout_below="@id/currentDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:id="@+id/buttonAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Attendance Button"
        android:padding="32dp"
        android:src="@drawable/attend" />
</RelativeLayout>
